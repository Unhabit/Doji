<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Doji</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    {% include "components/navbar.html.jinja" %}
    <h1 class="text-center my-4">Browse</h1>

    <form class="container" action="/browse">
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="query" placeholder="search" aria-label="search" aria-describedby="button-addon2" value="{{ query }}" >
            <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Search</button>
        </div>
    </form>

    <main class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        {% for item in products %}
        <div class="col">
          <div class="card h-100">
            <img src="{{ item['product_image'] }}" class="card-img-top img-fluid" alt="{{ item['name'] }}">
            <div class="card-body">
              <h5 class="card-title">{{ item["name"] }}</h5>
              <p class="card-text">${{ item["price"] }}</p>
              <a href="/product/{{ item['id'] }}" class="btn btn-primary">See product</a>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>